<a href='/users'>All Users</a>
<form action="/users" method="get">
	<input type='email' name='email' placeholder="User's E-Mail ID" required>
	<button>Search</button>
</form>

<% if(search_user && search_user.length>0){ %>
<% for(i of search_user){ %>
<div>
<a href='/users/profile/<%= i._id %>'><%= i.name %></a> : <%= i.email %>
</div>
<% } %>
<% }else if(search_user){ %>
<div>
<a href='/users/profile/<%= search_user.id %>'><%=search_user.name %></a> : <%= search_user.email %>
</div>
<% } %>