<link rel="stylesheet" type="text/css" href="/css/signup.css">
<div id ='signup'>
<div>
<form action='/users/create' method='post'>
<div id='new-form'>
<span class='auth-heading'>SignUp</span>
<span class='placeholder'>Enter your name</span>
<input class='input-part' type='text' name='name' placeholder='Name' title='Enter your name' required>
<span class='placeholder'>Enter your E-Mail ID</span>
<input class='input-part' type='email' name='email' placeholder='E-Mail ID' title='Enter your E-Mail ID' required>

<span class='placeholder'>Select your Course</span>
<select class='input-part' name="course">                        
            <option value="" style='display: none'>Course</option>
            
            <option value="B Tech">B Tech</option>
            
            <option value="MCA">MCA</option>
           
            <option value="M Tech">M Tech</option>
 
 </select>

<span class='placeholder'>Enter your Roll Number</span>
<input class='input-part' type='number' name='rollNo' placeholder='Roll Number' title='Enter your Roll Number' required>

<span class='placeholder'>Enter your Password</span>
<input class='input-part' id='password' type='password' name='password' placeholder='Password' title='Enter your Password' required>
<span class='warning'>Password must be at least 5 characters long</span>
<span class='placeholder'>Confirm your Password</span>
<input class='input-part' id='confirm_pass' type='password' name='confirm_password' placeholder='Confirm Password' title='Confirm your Password' required>
<input type='submit' title='Click here to SignUp !' value='SignUp'>

<%- include('./_socialAuth'); %>

</div>
</form>
</div>
</div>
<script src='/js/signup.js'></script>